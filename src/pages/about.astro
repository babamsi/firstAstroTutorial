---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

import '../styles/global.css'
const pageTitle = 'About Bamsi';

const identity = {
    firstName: 'Bamsi',
    country: 'Somalia',
    occupation: "Technical writer",
    hobbies: ["coding", "gyming", "photograph"]
}

const skills = ["html", "css", "js", "REACT", "ASTRO", "WRITING"]
const happy = true
const finished = false;
const goal = 3
const skillColor = 'navy'
const fontWeight = 'bold'
const textCase = 'uppercase'
import BaseLayout from '../layouts/BaseLayout.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
        <style define:vars={{skillColor, fontWeight, textCase}}>
            h1 {
                color: purple;
                font-size: 4rem;
            }
            .skill {
                color: var(--skillColor);
                font-weight: var(--fontWeight);
                text-transform: var(--textCase);
            }
        </style>
	</head>

    <body>
        <Header />
        <h1>{pageTitle}</h1>
        <h2>... and my new Astro site!</h2>
      
        <p>Here are few facts about me:</p>
        <ul>
            <li>My name is {identity.firstName}.</li>
            <li>I live in {identity.country}.</li>
            {identity.hobbies.map(item => <li>My hobbies are: {item}</li>)}
        </ul>
        <p>
            My skills are:
        </p>
        <ul>
            {skills.map(skill => <li class="skill">{skill}</li>)}
        </ul>
        {happy && <p>I am happy to be learning this new tech</p>}
        {finished && <p>I finished this tutorial</p>}
        {goal == 3 ? <p>My goal is to finish in 3 days</p>:<p>My goal is not 3 days</p>}
    <Footer />
    <script>
        import "../scripts/menu"
    </script>
    </body>
</html>
